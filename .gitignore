# from repo root
cat > .gitignore <<'EOF'
# Node modules
node_modules/
frontend/node_modules/
backend/node_modules/

# Environment files
.env
backend/.env

# Logs
*.log

# MacOS system files
.DS_Store

# Editor / IDE configs
.vscode/
.idea/

# Cache folders
.cache/
backend/.cache/
frontend/.cache/

# Temporary files
*.swp
*.tmp
*.bak

# coverage reports
coverage/
frontend/coverage/
backend/coverage/
EOF
